<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.vicianm.stickyviewpager.demo.DemoActivity">

    <TextView
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/section_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:text="http://github.com/vicianm/sticky-view-pager"
        android:autoLink="web"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_header"
        android:background="@android:color/holo_green_dark"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight">
    </android.support.v7.widget.RecyclerView>

    <com.github.vicianm.stickyviewpager.VerticalViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.github.vicianm.stickyviewpager.VerticalViewPager>

</LinearLayout>
